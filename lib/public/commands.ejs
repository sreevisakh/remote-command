			<script src="https://oss.maxcdn.com/libs/html5shiv/3.7.2/html5shiv.min.js"></script>
			<script src="https://oss.maxcdn.com/libs/respond.js/1.4.2/respond.min.js"></script>
		<![endif]-->
	</head>
	<body>
	<div class="container">
		<div class="navbar">
			     <a class="navbar-brand" href="#">Home automation</a>
			     <ul class="nav navbar-nav">
				    <li>
					   <a href="#">Add Devices</a>
				    </li>
			     </ul>
		</div>

		<div class="row">
		  <div class="col-xs-6">
		    <div class="thumbnail">
		      <img src="light.png" alt="Light">
		      <div class="caption">
		        <h3>Bedroom Light</h3>
		        <p><a href="#" class="btn btn-primary" role="button" onClick="add(event, 'light-on')">Turn On</a>
							<a href="#" class="btn btn-default" role="button" onClick="add(event, 'light-off')">Turn Off</a></p>
		      </div>
		    </div>
		  </div>
		</div>
		<div class="row">
			<div class="col-xs-12">
				<textarea class="form-control" rows=10 id="log"></textarea>
			</div>
		</div>
	</div>
</div>
	<script src="jquery-3.2.1.min.js"></script>
	<script>

		function add(event, command){
			$.ajax({
				method : 'post',
				url : window.location.protocol + "//"+ window.location.host,
				data: 'command='+command,
				success: function(data){
					console.log(data);
				},
				error: function(xhr, ajaxOptions, thrownError){
					console.log(thrownError);
				}
			})
		}

	</script>
	</body>
